<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Time spent</th>
    <th>Time estimate</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.date %></td>
    <td><%= task.description %></td>
    <td><%= task.time_spent %></td>
    <td><%= task.time_estimate %></td>
    <td><%= task.comment %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

