<h1>Listing activities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Util</th>
    <th>Hourly rate</th>
    <th>Description</th>
    <th>Engagement</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= activity.name %></td>
    <td><%= activity.util %></td>
    <td><%= activity.hourly_rate %></td>
    <td><%= activity.description %></td>
    <td><%= activity.engagement_id %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

